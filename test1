#!/bin/bash

# Email details
recipient="recipient@example.com"
subject="ORSA process files - $(date -d 'yesterday' '+%Y-%m-%d')"
body="Please find attached the ORSA process files for $(date -d 'yesterday' '+%Y-%m-%d')."
attachments_dir="/path/to/attachments"  # Replace with the actual path to your attachments directory

# Prepare the attachments
attachments=""
for file in "$attachments_dir"/*; do
    if [ -f "$file" ]; then
        attachments+="-a $file "
    fi
done

# Send the email
echo "$body" | mailx -s "$subject" $attachments "$recipient"
