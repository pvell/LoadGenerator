#!/bin/bash

# Replace these with your specific values
output_dir="/data/orsa-intermediate"  # Directory containing the .csv files
target_server="your_username@your_server_ip_or_hostname"  # SSH username and server address
target_dir="/path/to/target/directory"  # Remote directory where you want to copy the files

# Define the date format to match
mm_dd="10-27"

# Use SCP to copy .csv files with the specified date format to the target server
scp "$output_dir"/*"$mm_dd.csv" "$target_server:$target_dir/"

if [ $? -eq 0 ]; then
    echo "Files copied successfully to $target_server:$target_dir"
else
    echo "Error copying files to $target_server:$target_dir"
fi
