#!/bin/bash

# Define the recipient's email address
recipient="recipient@example.com"

# Define yesterday's date in the format yyyy-mm-dd
yesterday_date=$(date -d "yesterday" +"%Y-%m-%d")

# Define the subject of the email
subject="ORSA process files - $yesterday_date"

# Define the directory where attachments are located
attachment_dir="/path/to/attachments/"

# Check if mutt is installed
if ! command -v mutt &>/dev/null; then
    echo "Error: Mutt is not installed. Please install mutt and try again."
    exit 1
fi

# Create an array of attachment file paths from the specified directory
attachments=("$attachment_dir"/*)

# Check if there are any files in the specified directory
if [ ${#attachments[@]} -eq 0 ]; then
    echo "Error: No attachments found in the directory: $attachment_dir"
    exit 1
fi

# Compose and send the email
mutt -s "$subject" -a "${attachments[@]}" -- "$recipient" < /dev/null

# Exit the script
exit 0




attachments=(
    "/path/to/attachment1"
    "/path/to/attachment2"
)
