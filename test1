import pandas as pd

# Read the CSV file into a DataFrame
df = pd.read_csv('your_csv_file.csv')

# Filter data based on underlier
underlier = 'A'  # Example underlier
filtered_data = df[df['UnderlyingSymbol'] == underlier]

# Extract OptionID values
option_ids = filtered_data['OptionId'].tolist()

# Format OptionID values
formatted_option_ids = ','.join(option_ids)

# Write formatted_option_ids to a text file
output_file = f'{underlier}_option_ids.txt'
with open(output_file, 'w') as file:
    file.write(formatted_option_ids)

print(f'Option IDs for {underlier} written to {output_file}')
