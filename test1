#!/bin/bash

# Define the source and destination server details
source_user="your_username"
source_server="source_server_ip_or_hostname"
source_file="/path/to/source/file"

destination_user="your_username"
destination_server="destination_server_ip_or_hostname"
destination_path="/path/to/destination/directory"

# Use scp to copy the file from the source to the destination
scp "${source_user}@${source_server}:${source_file}" "${destination_user}@${destination_server}:${destination_path}"
