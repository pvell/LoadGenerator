import xml.etree.ElementTree as ET
from openpyxl import Workbook

def parse_xml(xml_file):
    tree = ET.parse(xml_file)
    root = tree.getroot()

    data = []

    for trade in root.findall(".//{http://www.fixprotocol.org/FIXML-4-4}TrdCaptRpt"):
        quantity = trade.get("LastQty")
        cfi = trade.find(".//{http://www.fixprotocol.org/FIXML-4-4}Instrmt").get("CFI")
        side = trade.find(".//{http://www.fixprotocol.org/FIXML-4-4}RptSide").get("Side")
        pty_id = trade.find(".//{http://www.fixprotocol.org/FIXML-4-4}RptSide/{http://www.fixprotocol.org/FIXML-4-4}Pty").get("ID")
        pty_r = trade.find(".//{http://www.fixprotocol.org/FIXML-4-4}RptSide/{http://www.fixprotocol.org/FIXML-4-4}Pty").get("R")
        customer_type = trade.find(".//{http://www.fixprotocol.org/FIXML-4-4}RptSide/{http://www.fixprotocol.org/FIXML-4-4}Pty").get("AR")

        data.append((quantity, cfi, side, pty_id, pty_r, customer_type))

    return data

def summarize_data(data):
    summary = {}

    for row in data:
        quantity, cfi, side, pty_id, pty_r, customer_type = row

        if pty_r == "14":
            key = (cfi, side, customer_type, "Ultimate Clearing Firm (OCC#)")
            if key in summary:
                summary[key].append(pty_id)
            else:
                summary[key] = [pty_id]

        if pty_r in ["1", "18"]:
            occ_number = pty_id[:3]
            key = (cfi, side, customer_type, "Column AQ = 1 or 18, Deliver Column AP per 3 digit OCC#")
            if key in summary:
                if occ_number in summary[key]:
                    summary[key][occ_number].append(pty_id)
                else:
                    summary[key][occ_number] = [pty_id]
            else:
                summary[key] = {occ_number: [pty_id]}

        if pty_r in ["2", "26"]:
            efid = pty_id[:4]
            key = (cfi, side, customer_type, "Column AQ = 2 or 26, Deliver Column AP per 4 letter EFID")
            if key in summary:
                if efid in summary[key]:
                    summary[key][efid].append(pty_id)
                else:
                    summary[key][efid] = [pty_id]
            else:
                summary[key] = {efid: [pty_id]}

    return summary

def write_to_excel(summary, output_file):
    wb = Workbook()
    ws = wb.active

    headers = ["Customer / Market Maker", "Side", "Ultimate Clearing Firm (OCC#)", "Column AQ = 14, Deliver Column AP", "Total Qty",
               "Column AQ = 1 or 18, Deliver Column AP per 3 digit OCC#", "Column AQ = 2 or 26, Deliver Column AP per 4 letter EFID"]
    ws.append(headers)

    for key, values in summary.items():
        cfi, side, customer_type, column_type = key
        total_qty = len(values)
        row_data = [customer_type, side, values.pop(0), values.get("1", "-"), total_qty, ", ".join(values.values()), values.get("LVT", "-")]
        ws.append(row_data)

    wb.save(output_file)
    print("Excel file saved successfully.")

# Main execution
xml_file = "input.xml"  # Path to your XML file
output_file = "output.xlsx"  # Output Excel file path

data = parse_xml(xml_file)
summary = summarize_data(data)
write_to_excel(summary, output_file)
